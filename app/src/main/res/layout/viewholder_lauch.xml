<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mission_patch_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mission_patch_image_view"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rocket_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scrollbarSize="21sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mission_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scrollbarSize="21sp"
            android:textStyle="normal" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/launch_year_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scrollbarSize="19sp"
            android:textStyle="normal" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>